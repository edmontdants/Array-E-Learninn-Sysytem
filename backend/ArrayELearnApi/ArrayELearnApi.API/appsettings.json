{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "ConnectionStrings": {
    "DefaultConnection": "Server=localhost;Database=ArrayELearnDb;MultipleActiveResultSets=true;Trusted_Connection=True;TrustServerCertificate=True;"
    //"DefaultConnection": "Server=(localdb)\\MSSQLLocalDB;Database=MyAppDb;Trusted_Connection=True;MultipleActiveResultSets=True;TrustServerCertificate=True"
    //"DefaultConnection": "Server=localhost;Database=ArrayELearnDb;User Id=sa;Password=YourStrongPassword123;MultipleActiveResultSets=True;Encrypt=True;TrustServerCertificate=True"
  },
  "Jwt": {
    "Key": "ARRAY_ELEARN_SECRET_KEY_123456789",
    "Issuer": "ArrayELearnAPI",
    "Audience": "ArrayELearnClients",
    "DurationInDays": "30"
  },
  "Smtp": {
    "Host": "smtp.gmail.com",
    "Port": "587",
    "EnableSsl": "true",
    "UserName": "moazelprince0@gmail.com",
    "Password": "12345678"
  },
  "Serilog": {
    "Using": [
      "Serilog.Sinks.Console",
      "Serilog.Sinks.File",
      "Serilog.Enrichers.Environment",
      "Serilog.Enrichers.Process",
      "Serilog.Enrichers.Thread"
    ],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft.EntityFrameworkCore": "Error",
        "Microsoft": "Warning",
        "System": "Warning"
      }
    },
    "Enrich": [
      "FromLogContext",
      "WithEnvironmentName",
      "WithEnvironmentUserName",
      "WithMachineName",
      "WithProcessId",
      "WithThreadId",
      {
        "Name": "WithEnvironmentVariable",
        "Args": { "variableName": "ASPNETCORE_ENVIRONMENT" }
      }
    ],
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "outputTemplate": "[{Timestamp:HH:mm:ss} {Level:u3}] {Message:lj} {Properties}{NewLine}{Exception}"
        }
      },
      {
        "Name": "File",
        "Args": {
          "path": "Logs/ArrayElearn-.log",
          "rollingInterval": "Day",
          "retainedFileCountLimit": 30,
          "rollOnFileSizeLimit": true,
          "fileSizeLimitBytes": "10000000",
          "shared": true,
          "flushToDiskInterval": "00:00:01",
          "outputTemplate": "[{Timestamp:yyyy-MM-dd HH:mm:ss} {Level:u3}] {Message:lj} | UserId={UserId} CorrelationId={CorrelationId} {Properties}{NewLine}{Exception}"
        }
      }
    ]
  },
  "Cors": {
    "AllowedOrigins": [
      "https://myfrontend.com",
      "https://another-site.com",
      "https://client.company.com"
    ]
  },
  "AllowedHosts": "*"
}
